{
  "name": "biochi-extension",
  "version": "1.0.0",
  "description": "仿生阅读Chrome扩展 - 基于Jieba中文分词优化的阅读体验",
  "main": "dist/content.js",
  "scripts": {
    "build": "node scripts/build.js",
    "build:watch": "node scripts/build.js --watch",
    "dev": "npm run build:watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "package": "npm run clean && npm run build && npm run zip",
    "zip": "cd dist && zip -r ../biochi-extension.zip ."
  },
  "keywords": [
    "chrome-extension",
    "bionic-reading",
    "chinese",
    "jieba",
    "reading-enhancement"
  ],
  "author": "BioChi Team",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.45.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=16.0.0"
  }
} 